<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="com.marklordan.brappberry.Soundboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.marklordan.brappberry.Soundboard">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prank"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/clickwoohoo"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="BRADBERRY"
                android:src="@drawable/clickwoohoo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/ethanbradberry"
                android:src="@drawable/bradberrypoint"
                android:onClick="BRADBERRY" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/brrrradberry"
                android:src="@drawable/brrradberry"
                android:onClick="BRADBERRY" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/ethankbradberry"
                android:src="@drawable/ethan"
                android:onClick="BRADBERRY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/hilabradberry"
                android:src="@drawable/hila"
                android:onClick="BRADBERRY" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/copberry"
                android:src="@drawable/copberry"
                android:onClick="BRADBERRY" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/abuseBerry"
                android:src="@drawable/pointyberry"
                android:onClick="BRADBERRY" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/jewishberry"
                android:src="@drawable/jewishberry"
                android:onClick="BRADBERRY" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/slammin"
                android:onClick="BRADBERRY"
                android:layout_height="match_parent"
                android:src="@drawable/slamminberry"/>
        </LinearLayout>






    </LinearLayout>
    </ScrollView>

        <com.mopub.mobileads.MoPubView
            android:id="@+id/mopub_sample_ad"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp"/>


</RelativeLayout>
