<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marklordan.brappberry.Soundboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prank"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ethanbradberry"
        android:src="@drawable/bradberrypoint"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="116dp"
        android:onClick="BRADBERRY" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brrrradberry"
        android:src="@drawable/brrradberry"
        android:onClick="BRADBERRY"
        android:layout_alignTop="@+id/ethanbradberry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ethankbradberry"
        android:src="@drawable/ethan"
        android:layout_marginTop="54dp"
        android:onClick="BRADBERRY"
        android:layout_below="@+id/ethanbradberry"
        android:layout_alignLeft="@+id/ethanbradberry"
        android:layout_alignStart="@+id/ethanbradberry" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hilabradberry"
        android:src="@drawable/hila"
        android:onClick="BRADBERRY"
        android:layout_alignTop="@+id/ethankbradberry"
        android:layout_alignLeft="@+id/brrrradberry"
        android:layout_alignStart="@+id/brrrradberry"
        android:layout_alignBottom="@+id/ethankbradberry" />

    <com.mopub.mobileads.MoPubView
        android:id="@+id/mopub_sample_ad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
